{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true,
    "amd": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended", "plugin:import/react", "prettier"],
  "plugins": ["jest", "import", "promise", "react"],
  
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },   
  "rules": {
    "react/prop-types": 0,
    "no-underscore-dangle": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "global": "readonly"
  }
}
